#!/usr/bin/env php
<?php
/**
 * 服务启动管理
 * @author donknap
 * @date 18-7-18 下午6:35
 */
$path = end($argv);
reset($argv);
$appPath = null;
if (strpos($path, '--app-path') !== false) {
	$appPath = $path;
	array_pop($argv);
	$_SERVER['argv'] = $argv;
}

$dir = dirname(__DIR__, 4);
if (!file_exists($dir . '/config/define.php')) {
	if (!$appPath) {
		echo '请通过参数--app-path指定app目录';
		exit();
	}
	$dir = explode('=', $appPath, 2)[1];
}

require_once $dir . '/config/define.php';
$loader = require_once BASE_PATH . '/vendor/autoload.php';

$script = array_shift($argv);
$type = array_shift($argv);
$operate = array_shift($argv);
if (in_array($type, ['start', 'stop', 'restart'])) {
	$operate = $type;
	$type = null;
}
$_SERVER['argv'] = array_merge(
	[
		$script,
		'server:' . $operate,
		'--config-app-setting-server=' . $type
	],
	$argv
);

$app = new \W7\App();
$app->runConsole();

