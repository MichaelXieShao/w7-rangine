#!/usr/bin/env php
<?php
/**
 * 服务启动管理
 * @author donknap
 * @date 18-7-18 下午6:35
 */
require_once dirname(__DIR__, 4) . '/config/define.php';
$loader = require_once BASE_PATH . '/vendor/autoload.php';

$script = array_shift($argv);
$type = array_shift($argv);
$operate = array_shift($argv);
if (in_array($type, ['start', 'stop', 'restart'])) {
	$operate = $type;
	$type = null;
}
$_SERVER['argv'] = array_merge(
	[
		$script,
		'server:' . $operate,
		'--config-app-setting-server=' . $type
	],
	$argv
);

$app = new \W7\App();
$app->runConsole();

